# ============================================================================
# GBSV Model System - Environment Configuration Template (.env.example)
# ============================================================================
# Copy this file to .env and fill in your values for local/dev use.
# DO NOT commit .env to version control.
#
# Codespaces: Prefer GitHub Codespaces secrets (Repo -> Settings -> Codespaces).
# GitHub Actions: Store CI/CD secrets in repo secrets and map to workflows.
#
# For production, use Azure Key Vault instead of local .env files:
#   . .\scripts\load-secrets.ps1 -FromKeyVault
# ============================================================================

# ============================================================================
# API KEYS - Store actual values in Azure Key Vault for production
# ============================================================================

# SportsDataIO - NFL/NCAAF box scores and schedules
# Key Vault secret name: sportsdataio-nfl-ncaaf
SDIO_KEY=your-sportsdataio-key-here

# The Odds API - NBA/NCAAM odds data
# Key Vault secret name: oddsapi-main
ODDS_API_KEY=your-odds-api-key-here

# Basketball API - Secondary NBA/NCAAM source
# Key Vault secret name: basketball-api
BASKETBALL_API_KEY=your-basketball-api-key-here

# Action Network credentials
# Key Vault secret names: actionnetwork-user, actionnetwork-password
ACTIONNETWORK_USER=your-email-here
ACTIONNETWORK_PASS=your-password-here

# ============================================================================
# Azure Configuration
# ============================================================================
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
# Optional: service principal secret for non-interactive az login (leave blank if not used)
AZURE_CLIENT_SECRET=
# Optional: set to true to attempt az login --identity
AZURE_USE_MANAGED_IDENTITY=
AZURE_RESOURCE_GROUP=dashboard-gbsv-main-rg
AZURE_LOCATION=eastus

# Storage Configuration
AZURE_STORAGE_ACCOUNT=gbsvorchestratorstorage
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# Azure Computer Vision (for OCR)
# Key Vault secret names: azure-vision-endpoint, azure-vision-key
AZURE_VISION_ENDPOINT=https://your-vision-resource.cognitiveservices.azure.com/
AZURE_VISION_KEY=your-vision-api-key-here

# SignalR Configuration
AZURE_SIGNALR_NAME=gbsv-signalr
AZURE_SIGNALR_CONNECTION_STRING=Endpoint=https://...

# Application Insights
APPINSIGHTS_NAME=gbsv-orchestrator-insights
APPINSIGHTS_INSTRUMENTATIONKEY=your-instrumentation-key
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=...

# Container Registry
ACR_NAME=gbsvregistry
ACR_LOGIN_SERVER=gbsvregistry.azurecr.io
# Optional fallbacks (workflow can auto-resolve from ACR admin credentials)
ACR_USERNAME=
ACR_PASSWORD=
# Preferred: grant the container app identity AcrPull on the ACR.

# Orchestrator Configuration
ORCHESTRATOR_NAME=gbsv-orchestrator
ORCHESTRATOR_URL=https://www.greenbiersportventures.com/api
ORCHESTRATOR_FUNCTIONS_KEY=your-functions-key
FUNCTIONS_BASE_URL=https://www.greenbiersportventures.com
API_BASE_URL=https://www.greenbiersportventures.com/api
API_BASE_FALLBACK=
SCOREBOARD_API_URL=

# Optional shared API secret (used by server-side auth checks)
API_SHARED_SECRET=

# Optional: Require shared key for specific write endpoints
REQUIRE_EXECUTE_KEY=false
REQUIRE_REGISTRY_WRITE_KEY=false
REQUIRE_PICKS_WRITE_KEY=false
REQUIRE_ARCHIVE_WRITE_KEY=false
REQUIRE_NOTIFY_KEY=false

# Model Endpoints (optional overrides; registry is preferred)
NBA_API_URL=
NCAAM_API_URL=
NFL_API_URL=
NCAAF_API_URL=

# Model Resource Groups
NBA_RESOURCE_GROUP=nba-gbsv-model-rg
NCAAM_RESOURCE_GROUP=ncaam-gbsv-model-rg
NFL_RESOURCE_GROUP=nfl-gbsv-model-rg
NCAAF_RESOURCE_GROUP=ncaaf-gbsv-model-rg

# Dashboard Configuration
DASHBOARD_URL=https://www.greenbiersportventures.com
STATIC_WEB_APP_NAME=Dashboard-Home-Page

# External APIs (for pick analysis)
ESPN_API_COOKIE=your-espn-cookie

# GitHub Configuration
# Optional: GitHub CLI token for non-interactive gh auth (leave blank if not used)
GH_TOKEN=
GITHUB_TOKEN=your-github-token
GITHUB_REPOSITORY=JDSB123/Dashboard_Home_Page

# Notification Configuration
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/...
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
NOTIFICATION_EMAIL=jb@greenbiercapital.com

# Environment Settings
ENVIRONMENT=production
DEBUG_MODE=false
LOG_LEVEL=INFO

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://www.greenbiersportventures.com,http://localhost:3000

# Model Registry Settings
MODEL_REGISTRY_TABLE=modelregistry
MODEL_EXECUTIONS_TABLE=modelexecutions

# Pick Analysis Settings
PICKS_CONTAINER=picks-data
ANALYSIS_CONTAINER=picks-analysis
PICKS_TABLE=pickshistory

# Performance Settings
MAX_CONCURRENT_MODELS=4
MODEL_TIMEOUT_SECONDS=300
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5

# Feature Flags
ENABLE_MODEL_CACHE=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_AUTO_GRADING=true
ENABLE_NOTIFICATIONS=true
# CORS and Cosmos tuning
ALLOWED_ORIGINS=https://www.greenbiersportventures.com,http://localhost:3000,http://localhost:8080
COSMOS_PREFERRED_REGIONS=East US,Central US
